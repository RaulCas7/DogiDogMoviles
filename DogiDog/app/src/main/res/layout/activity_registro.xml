<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/bordercollie"
        android:contentDescription="Logo" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtRegistrarse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Crear Cuenta"
        android:textSize="22sp"
        android:textColor="@color/primario"
        android:textStyle="bold"
        android:gravity="center"/>

    <!-- Campo Email -->
    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:background="@drawable/redondeo"
        android:paddingHorizontal="16dp"/>

    <!-- Campo Usuario -->
    <EditText
        android:id="@+id/edtUsuario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nombre de usuario"
        android:inputType="text"
        android:background="@drawable/redondeo"
        android:paddingHorizontal="16dp"/>

    <!-- Campo Contraseña -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/redondeo">

        <EditText
            android:id="@+id/edtContra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Contraseña"
            android:background="@drawable/redondeo"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"/>

        <ImageButton
            android:id="@+id/btnMostrarContra"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/visibility_off_24"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Mostrar contraseña"/>
    </LinearLayout>

    <!-- Campo Repetir Contraseña -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/redondeo">

        <EditText
            android:id="@+id/edtContraRepetir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Repetir contraseña"
            android:background="@drawable/redondeo"
            android:inputType="textPassword"
            android:paddingHorizontal="16dp"/>

        <ImageButton
            android:id="@+id/btnMostrarContraRepetida"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:src="@drawable/visibility_off_24"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Mostrar contraseña"/>
    </LinearLayout>

    <!-- Botón Registrarse -->
    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="Registrarse"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/primario"
        android:textColor="@color/white"/>

    <!-- Línea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"/>

    <!-- Texto y botón de inicio de sesión -->
    <TextView
        android:id="@+id/txtSinMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="¿Ya tienes una cuenta?"
        android:textSize="14sp"
        android:textColor="@color/primario"
        android:textStyle="bold"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnInicioSesion"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text="Iniciar Sesión"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:backgroundTint="@color/primario"
        android:textColor="@color/white"/>

</LinearLayout>
